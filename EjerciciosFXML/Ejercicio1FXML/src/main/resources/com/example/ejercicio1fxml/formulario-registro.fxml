<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="BASELINE_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controller.FormularioRegistro" >

    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
    </padding>


    <Label fx:id="Nombre" text="Nombre"/>
    <TextField fx:id="TextFieldNombre" promptText="Introduce el nombre" />
    <Label fx:id="Apellido" text="Apellido"/>
    <TextField fx:id="TextFieldApellido" promptText="Introduce el apellido" />
    <Label fx:id="Direction" text="Dirección"/>
    <TextField fx:id="TextFieldDireccion" promptText="Introduce tu dirección" />
    <Label fx:id="Comentario" text="Comentario"/>
    <TextField fx:id="TextFieldComentario" promptText="Introduce el nombre" />
    <HBox spacing="10">

        <Button fx:id="BotonGuardar" text="Guardar" onMousePressed="#BotonGuardarAction"/>
        <Button fx:id="BotonCancelar" text="Cancelar" onMousePressed="#BotonCancelarAction"/>

    </HBox>

    <Label fx:id="TextoConfirmacion"/>


</VBox>
