<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>

<GridPane  vgap="10" hgap="10" alignment="BASELINE_LEFT" maxWidth="Infinity"
               xmlns:fx="http://javafx.com/fxml"  fx:controller="Controller.FormularioCompleto" >
        <padding>
            <Insets bottom="20.0" top="20.0" left="20.0" right="20.0"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label fx:id="LBLNombre" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="TextFieldNombre" minWidth="200" promptText="Introduce el Nombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label fx:id="LBLContraseña" text="Contraseña: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="TextFieldContraseña" prefWidth="200" promptText="Introduce la contraseña" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label fx:id="LBLFecha" text="Fecha de nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="Fecha" promptText="Fecha" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label fx:id="LBLPais" text="Pais:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="ComboBoxPais" promptText="Pais" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="España"/>
                    <String fx:value="Francia"/>
                </FXCollections>

            </items>
        </ComboBox>



        <Label fx:id="LBLGenero" text="Genero:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="4" spacing="10">
            <RadioButton fx:id="RBmasculino" text="Masculino" />
            <RadioButton fx:id="RBFemenino" text="Femenino"/>
        </HBox>


        <Label fx:id="LBLIntereses" text="Intereses:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="5" spacing="10">
            <CheckBox fx:id="Musica" text="Musica" />
            <CheckBox fx:id="Deporte" text="Deporte" />
            <CheckBox fx:id="Lectura" text="Lectura" />
        </VBox>

        <Label fx:id="LBLComentarios" text="Comentarios:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="TextFieldComentario" prefWidth="200" promptText="Introduce tu comentario, nos ayudara mucho!!" alignment="TOP_LEFT" minHeight="90" GridPane.columnIndex="1" GridPane.rowIndex="6"/>



        <HBox alignment="CENTER" spacing="10" minHeight="50"  GridPane.columnIndex="1" GridPane.rowIndex="7">
            <Button fx:id="enviar" text="Enviar" onMousePressed="#mostrarResultado"/>
            <Button fx:id="limpiar" text="Limpiar" onMousePressed="#limpiar"/>
        </HBox>

        <VBox fx:id="VboxResultados" GridPane.columnIndex="1" GridPane.rowIndex="8">
            <Label fx:id="NombreUsuario"/>
            <Label fx:id="PaisUsuario"/>
            <Label fx:id="GeneroUsuario"/>
            <Label fx:id="InteresesUsuario"/>
            <Label fx:id="FechaUsuario"/>
        </VBox>



    </GridPane>


